# {{ ansible_managed }}

{% for host in play_hosts|sort if host != ansible_hostname %}
# lsyncd {{ host }}
Host {{ host }}
	User root
	IdentityFile ~/.ssh/lsyncd.key
 	StrictHostKeyChecking no
 	UserKnownHostsFile=/dev/null

{% endfor %}

{% for host in lsyncd_additional_hosts %}
# lsyncd additional host {{ host }}
Host {{ host }}
	User root
	IdentityFile ~/.ssh/lsyncd.key
 	StrictHostKeyChecking no
 	UserKnownHostsFile=/dev/null

{% endfor %}
